parent(P,C) :- father(P,C) ; mother(P,C).
grandparent(G,X) :- parent(G,Y) , parent(Y,X).
brother(X,Y) :- male(X) , parent(P,X) , parent(P,Y) , X \= Y.
sister(W,Z) :- female(W) , parent(P,W) , parent(P,Z), W \= Z.
sibling(A,B) :- brother(A,B) ; sister(A,B).
